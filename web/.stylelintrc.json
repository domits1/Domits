{
    "extends": ["stylelint-config-standard"],
    "rules": {
      "selector-max-type": [
        0,
        {
          "message": "Gebruik geen globale type-selectors, maak gebruik van classes of BEM.",
          "severity": "error"
        }
      ],
  
      "selector-max-universal": [
        0,
        {
          "message": "Gebruik geen universele selectors. Houd je styling specifiek.",
          "severity": "error"
        }
      ],
  
      "min-nesting-depth": [
        1, 
        {
        "message": "Houd je CSS overzichtelijk.",
        "severity": "warning"
      }],

      "max-nesting-depth": [
        4,
        {
          "message": "Houd je CSS overzichtelijk.",
          "severity": "warning"
        }
      ],
  
      "comment-no-empty": true,
      "no-invalid-double-slash-comments": true
    }
  }
  